<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white10"
    >

    <LinearLayout
        android:gravity="center|left"
        android:orientation="horizontal"
        android:layout_margin="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView

            android:id="@+id/item_comics_img_comic"
            android:adjustViewBounds="true"
            android:src="@mipmap/ic_launcher"
            android:layout_width="108dp"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_marginRight="6dp"
            android:layout_marginLeft="6dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="18sp"
                android:id="@+id/item_comics_tv_title"
                android:text="Tittle"
                android:layout_margin="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:visibility="gone"
                android:textSize="14sp"
                android:id="@+id/item_comics_tv_isbn"
                android:text="ISBN"
                android:layout_margin="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:textSize="14sp"
                android:id="@+id/item_comics_tv_autor"
                android:text="Author"
                android:layout_margin="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:gravity="center|right"
                android:weightSum="100"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:textSize="14dp"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_red_radius_all"
                    android:id="@+id/item_btn_show_more"
                    android:text="Show more"
                    android:layout_weight="50"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
