<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:background="@color/red_marvel"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:tint="@color/white"
                android:id="@+id/activity_description_comic_img_back"
                android:scaleType="centerInside"
                android:src="@drawable/ic_back"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="?attr/actionBarSize"/>
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:background="@color/white10"
        android:weightSum="100"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_weight="40"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <ImageView
                android:id="@+id/activity_description_comic_img_comic"
                android:src="@drawable/ic_logo_marvel"
                android:adjustViewBounds="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </ImageView>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="60"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout

                    android:layout_margin="12dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:padding="4dp"
                        android:textSize="20sp"
                        android:text="ID"
                        android:id="@+id/activity_description_comic_tv_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:padding="4dp"
                        android:textSize="20sp"
                        android:text="isbn"
                        android:id="@+id/activity_description_comic_tv_isbn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:padding="4dp"
                        android:textSize="20sp"
                        android:text="tittle"
                        android:id="@+id/activity_description_comic_tv_tittle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:padding="4dp"
                        android:textSize="20sp"
                        android:text="author"
                        android:id="@+id/activity_description_comic_tv_author"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:padding="4dp"
                        android:textSize="20sp"
                        android:text="description"
                        android:id="@+id/activity_description_comic_tv_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:padding="4dp"
                        android:textSize="20sp"
                        android:text="upc"
                        android:id="@+id/activity_description_comic_tv_upc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
            </ScrollView>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>